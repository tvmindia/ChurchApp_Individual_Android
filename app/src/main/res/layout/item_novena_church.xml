<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/extra_detail_layout"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp"
        android:background="@drawable/white_transparent_card"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NovenaCaption"
            android:layout_marginTop="5dp"
            android:id="@+id/novena_caption"
            android:layout_toRightOf="@+id/detail_image"
            android:layout_toEndOf="@+id/detail_image"
            android:textColor="@color/primary_text"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/detail_image"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/priest"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, pro ea autem paulo. Cu justo labore expetenda. Sale quaerendum vis ei. Timeam aperiam accusamus ad usu, justo noster tamquam mea no."
            android:id="@+id/novena_description"
            android:layout_below="@id/novena_caption"
            android:textColor="@color/secondary_text"
            android:textSize="13sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/detail_image"
            android:layout_toEndOf="@+id/detail_image" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/novena_date"
            android:textColor="@color/primary_text"
            android:text="20-Nov-2016 to 25-Nov-2016"
            android:layout_below="@+id/novena_description"
            android:gravity="end"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/detail_image"
            android:layout_toEndOf="@+id/detail_image" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/novena_time"
            android:textColor="@color/primary_text"
            android:text="Mon-9:00AM|Sun-9:00AM"
            android:layout_below="@+id/novena_date"
            android:gravity="end"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/detail_image"
            android:layout_toEndOf="@+id/detail_image"  />
    </RelativeLayout>

</LinearLayout>