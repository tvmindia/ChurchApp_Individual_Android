<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_transparent_card"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:paddingBottom="10dp">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_margin="11dp"
            android:src="@drawable/church"
            android:id="@+id/patron_image"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:text="Pious Organisation Name"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/patron_image"
            android:id="@+id/Pious_org_name"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patron Name"
            android:id="@+id/Pious_org_patron_name"
            android:textSize="14sp"
            android:textColor="@color/primary_text"
            android:layout_below="@+id/Pious_org_name"
            android:layout_toRightOf="@+id/patron_image"
            android:layout_marginRight="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:ellipsize="end"/>
    </RelativeLayout>


</LinearLayout>
