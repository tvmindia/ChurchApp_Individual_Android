<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/extra_detail_layout"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/white_transparent_card"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Detail"
            android:layout_marginTop="5dp"
            android:id="@+id/extra_detail_label"
            android:textColor="@color/primary_text"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/detail_image"
            android:layout_margin="10dp"
            android:src="@drawable/church"
            android:scaleType="centerInside"
            android:layout_below="@+id/extra_detail_label"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, pro ea autem paulo. Cu justo labore expetenda per, eam fabellas neglegentur an, sit no sonet saepe oporteat. Idque maiorum corpora te vim, facete aliquam salutatus qui te, eleifend tincidunt concludaturque per at. Duis posse qualisque has cu, nobis oblique at quo. Eos ei albucius molestie comprehensam, ius in veri commune singulis, autem decore accusamus at sea."
            android:id="@+id/extra_details"
            android:layout_below="@id/extra_detail_label"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/detail_image"
            android:layout_toEndOf="@+id/detail_image" />
        <TextView
            android:text="View more"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_below="@id/extra_details"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:onClick="view_more_extra_detail"
            android:id="@+id/view_more_extra_detail"/>
    </RelativeLayout>
</LinearLayout>